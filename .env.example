# Kalkyla.se Environment Variables
# Copy this file to .env.local and fill in the values

# =============================================================================
# DATABASE (Neon PostgreSQL)
# =============================================================================
# Get your connection string from: Neon Console -> Project -> Connection Details
# Use the "pooled" connection string for better serverless performance

DATABASE_URL="postgresql://username:password@hostname/database?sslmode=require"

# =============================================================================
# AUTHENTICATION (NextAuth.js)
# =============================================================================
# Generate with: openssl rand -base64 32

NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# APPLICATION
# =============================================================================

NODE_ENV="development"

# Base URL for share links (defaults to https://kalkyla.se if not set)
# Use http://localhost:3000 for local development
NEXT_PUBLIC_APP_URL="https://kalkyla.se"

# =============================================================================
# N8N INTEGRATION (Email Sending)
# =============================================================================
# Configure N8N webhook URL for email sending (password reset, etc.)
# In development, emails are logged to console if this is not set.

N8N_WEBHOOK_URL="https://your-n8n-instance.com/webhook/password-reset"

# =============================================================================
# ANALYTICS (PostHog)
# =============================================================================
# Get your API key from: PostHog -> Project Settings -> Project API Key
# For EU data residency, use: https://eu.i.posthog.com
# For US data residency, use: https://us.i.posthog.com

NEXT_PUBLIC_POSTHOG_KEY="phc_your_project_api_key"
NEXT_PUBLIC_POSTHOG_HOST="https://eu.i.posthog.com"
